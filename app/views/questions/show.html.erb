<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<% if @question.pools.any? %>
<p>
  <strong>Pools:</strong>
  <ul>
  <% @question.pools.each do |pool| %>
  <li><%= pool.name %></li>
  <% end %>
</ul>
</p>

<% end %>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
